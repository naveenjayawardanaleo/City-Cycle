<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homepage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">



    <ImageView
        android:id="@+id/bikeImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/baseline_add_a_photo_24" />


    <TextView
        android:id="@+id/bikeId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bike ID"
        style="@style/cardText"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"/>


    <TextView
        android:id="@+id/rentalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rental Price: $5/hour"
        android:textSize="16sp"
        style="@style/cardText"
        android:paddingTop="8dp"/>
    <TextView
        android:id="@+id/bikeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rental Price: $5/hour"
        android:textSize="16sp"
        style="@style/cardText"
        android:paddingTop="8dp"/>




    <TextView
        android:id="@+id/rentalTimes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rental Time: 06:00 AM - 10:00 PM"
        android:textSize="16sp"
        style="@style/cardText"
        android:paddingTop="8dp"/>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/backtoHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/buttonStyle"

                android:text="Cancel"
                />

            <Button
                android:id="@+id/btnConfirmRental"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm Rental"
                style="@style/buttonStyle"

                android:layout_marginLeft="20dp"
                />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:layout_marginTop="20dp"

        android:padding="10dp"
        android:text="Lock your CityCycle Rentals bike properly with a U-lock or chain. Park in safe, well-lit areas and check the bike before riding. Follow traffic rules, wear a helmet, and return the bike on time. Keep your account secure and report any issues through the app. Ride safe and enjoy! "
        android:textColor="@color/black"
        android:textSize="20dp"

        />

</LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
